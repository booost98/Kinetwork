<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LapisBlue"
        android:gravity="center"
        android:text="Upload Files Here"
        android:textColor="@color/White"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/chooseFileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="CHOOSE FILE"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/imageNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/chooseFileBtn"
        android:hint="Enter file nickname" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/uploadProgressBar"
        android:layout_below="@id/chooseFileBtn"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/uploadFileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:text="UPLOAD"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/uploadProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/uploadFileBtn"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/showUploads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/uploadFileBtn"
        android:layout_alignBottom="@id/uploadFileBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Show Uploads"
        android:textSize="20sp" />

</RelativeLayout>